<Window x:Class="HCI_Project.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Project"
      xmlns:viewModel="clr-namespace:HCI_Project.MVVM.ViewModel"
      
      mc:Ignorable="d"
      Title="MainView" WindowStyle="SingleBorderWindow" 
      MinWidth="400" MinHeight="225"
      Background="{DynamicResource lnchBlack}">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid Width="800" Height="450">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ContentControl Content="{Binding CurrentView}" Grid.Row="1" Grid.Column="1" />

    </Grid>
</Window>
