<Window x:Class="HCI_Project.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Project"
      xmlns:viewModel="clr-namespace:HCI_Project.MVVM.ViewModel" xmlns:view="clr-namespace:HCI_Project.MVVM.View"
        mc:Ignorable="d"
      Title="MainView" WindowStyle="SingleBorderWindow" 
      MinWidth="800" MinHeight="450"
      d:DesignHeight="900" d:DesignWidth="1600"
      Background="{DynamicResource lnchBlack}">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="125"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="150" />
                <ColumnDefinition Width="7*" MinWidth="500"/>
            </Grid.ColumnDefinitions>
            <ContentControl Content="{Binding CurrentView}" Grid.Column="1" />
            <view:LibraryView Grid.Column="0" ListSource="{Binding OwnedGames}"/>
            <GridSplitter  Grid.Column="0" Width="5" Grid.RowSpan="2"/>
        </Grid>
       
    </Grid>
</Window>
