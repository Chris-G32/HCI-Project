<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--STYLES-->
    <Style x:Key="TextBodyStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#EAE7F2"/>
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontStyle" Value="Normal" />
    </Style>
    <Style x:Key="TextHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#EAE7F2"/>
        <Setter Property="FontSize" Value="13.5" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontStyle" Value="Normal" />
    </Style>
    <Style x:Key="BigTextHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#EAE7F2"/>
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontStyle" Value="Normal" />
    </Style>
    <Style x:Key="LibraryTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#EAE7F2"/>
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontStyle" Value="Normal" />
    </Style>
</ResourceDictionary>