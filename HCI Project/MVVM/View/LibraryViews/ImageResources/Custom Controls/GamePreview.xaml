<UserControl x:Class="HCI_Project.MVVM.View.LibraryViews.ImageResources.Custom_Controls.GamePreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI_Project.MVVM.View.LibraryViews.ImageResources.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="300" x:Name="GamePrev">
    <Grid>
        <Image Source="{Binding GameImageSrcProperty,ElementName=GamePrev,TargetNullValue=../DefaultImages/default_game_image@2x.png}" Width="200">
        </Image>
    </Grid>
</UserControl>
