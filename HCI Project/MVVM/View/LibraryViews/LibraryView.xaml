<UserControl x:Class="HCI_Project.MVVM.View.LibraryViews.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI_Project.MVVM.View"
             xmlns:viewModel="clr-namespace:HCI_Project.MVVM.ViewModel.LibraryViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="775" d:DesignWidth="1600"
             x:Name="Library"
             >
    <Grid>
        <d:Grid.DataContext>
            <viewModel:LibraryViewModel/>
        </d:Grid.DataContext>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="150" />
            <ColumnDefinition Width="7*" MinWidth="500"/>
        </Grid.ColumnDefinitions>
        <ItemsControl MinWidth="100" Grid.Column="0" Background="{DynamicResource lnchDarkMedGray}" ItemsSource="{Binding OwnedGames}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!--stack panel of length = visible games-->
                    <StackPanel x:Name="LibraryItems" PreviewMouseDown="Default_PreviewMouseDown" Orientation="Horizontal" 
                               MouseDown="LibraryItemSelect" Background="{DynamicResource lnchDarkMedGray}"
                          
                               >
                        <!--Background depends on if selected-->
                        <!--GAME ICON-->
                        <Image x:Name="GameIcon" Height="35" Width="35"
                        Source="../../../Icons/default_game_icon@2x.png"
                        Margin="2"
                        />

                        <!--GAME TITLE-->
                        <!--needs data bind per entry-->
                        <!--style changes when not installed-->
                        <TextBlock x:Name="LibraryEntry" Style="{DynamicResource LibraryTextStyle}"
                            Text="{Binding Name}"
                            HorizontalAlignment="Left" VerticalAlignment="Center"
                            TextWrapping="Wrap"
                        />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ContentControl Content="{Binding CurrentView,NotifyOnSourceUpdated=True,Mode=OneWay}" Grid.Column="1"/>
        <GridSplitter Grid.Column="0" Width="5"/>
    </Grid>
</UserControl>
