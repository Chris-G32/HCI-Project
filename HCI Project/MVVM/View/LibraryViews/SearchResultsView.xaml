<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI_Project.MVVM.View.LibraryViews"
             xmlns:View="clr-namespace:HCI_Project.MVVM.View" x:Class="HCI_Project.MVVM.View.LibraryViews.SearchResultsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background= "{DynamicResource lnchDarkGray}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="101"/>
            <RowDefinition Height="167"/>
            <RowDefinition Height="167"/>
        </Grid.RowDefinitions>
        
        
        <Button x:Name="Home" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Background= "WhiteSmoke" Height="35" Width="35">
            <Image  Source ="https://i.pinimg.com/originals/11/73/e3/1173e32890c0f9fab846b7218c7f3aa9.jpg"  Stretch="UniformToFill"/>
        </Button>

        <Button x:Name="Settings" Grid.Row="0" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Right" Background="WhiteSmoke" Height="35" Width="35">
            <Image Source ="https://cdn-icons-png.flaticon.com/512/126/126472.png"                          Stretch="UniformToFill" />
        </Button>

        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="Results" 
                 FontSize="30" Foreground="White" Height="36" Margin="15"           
         />

         
        <!--Search Results-->

        <!--  Result 1-->
        <Image x:Name="SearchImage1" Grid.Row="1" Grid.Column="0" Margin="46,5,46,21" 
               Stretch="UniformToFill" Source="https://cdn2.unrealengine.com/egs-spider-man-miles-morales-carousel-thumb-1200x1600-b7c0fb2da84b.jpg"/>
        <Button Margin="0,0,46,21" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="18" Width="25" 
                Background="Green" BorderBrush="Black" Foreground="White" Content="Play" FontSize="10" />
        <TextBlock x:Name="SearchText1" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5" Foreground="White" Text="(Game Title)"/>

        <!--  Result 2-->
